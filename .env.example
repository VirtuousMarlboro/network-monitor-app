PORT=3000

# SECURITY: Generate a strong session secret with:
# node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
# The application will NOT start without a valid SESSION_SECRET (min 32 chars)
SESSION_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING

# Set to 'production' to enable HTTPS cookie requirement and other security features
NODE_ENV=development

# CORS Configuration
# In production, set this to your specific domain (e.g., https://yourdomain.com)
# Using '*' allows all origins (not recommended for production with credentials)
CORS_ORIGIN=*

# Initial admin account password (user will be forced to change on first login)
# Generate strong password for production deployments
DEFAULT_ADMIN_PASSWORD=ChangeThisStrongPassword123!

# Backup Configuration
BACKUP_ENABLED=true
# Cron schedule for automatic backups (default: midnight every day)
BACKUP_CRON="0 0 * * *"
# Path to backup directory
BACKUP_PATH="./backups"
# How many days to retain backup files
BACKUP_RETENTION_DAYS=7

# SECURITY: Telegram Configuration (preferred over settings.json)
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=
# Chat ID where notifications will be sent
TELEGRAM_CHAT_ID=

